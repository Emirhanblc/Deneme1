model UserPreferences {
  id          String   @id @default(cuid())
  userId      String   @unique
  interests   String[] // Array of tags/categories the user is interested in
  emailNotifications Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Content {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String   @db.Text
  isPremium   Boolean  @default(false)
  category    String   // "system-admin", "backend", "security", etc.
  tags        String[]
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Reading progress tracking (disabled for now)
  // readingProgress ReadingProgress[]
}

model JobListing {
  id          String   @id @default(cuid())
  title       String
  company     String
  description String   @db.Text
  location    String?
  remote      Boolean  @default(false)
  salaryRange String?
  tags        String[] // ["backend", "devops", "kubernetes", etc.]
  isActive    Boolean  @default(true)
  featured    Boolean  @default(false)
  companyLogo String?
  applyUrl    String
  postedBy    String   // Company user ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
